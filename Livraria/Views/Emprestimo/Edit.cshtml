@model Livraria.Models.EmprestimoViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Altere as informações sobre esse empréstimo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label class="control-label col-md-2 label-maior">Data do empréstimo</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.dataEmprestimo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dataEmprestimo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 label-maior">Data da devolução</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.dataDevolucao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dataDevolucao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 label-maior">Livro</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.idLivro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.idLivro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Salvar" class="bt-verde bt-form" />
            </div>
        </div>
    </div>
}

